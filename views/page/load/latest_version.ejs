<table class="table table-bordered">
    <tbody>
      <tr>
        <td>Engine</td>
        <td>:</td>
        <td><%= oldVersion %></td>
      </tr>
      <tr>
        <%
            if(needUpdate){
                text = lingua.dashboard_page.desc_need_ver;
                bg = 'success';
            }
            else{
                text = lingua.dashboard_page.desc_need_ver2 + ' <b>'+latestVersion+'</b>';
                bg = 'danger';
            }
        %>
        <td colspan="3" class="table-<%= bg %>">
            <%- text %>
        </td>
      </tr>
      <tr>
        <td>WHAPI</td>
        <td>:</td>
        <td><%= oldVersionWhapi %></td>
      </tr>
      <tr>
        <%
            if(needUpdateWhapi){
                text = lingua.dashboard_page.desc_need_ver;
                bg = 'success';
            }
            else{
                text = lingua.dashboard_page.desc_need_ver2 + ' <b>'+latestVersionWhapi+'</b>';
                bg = 'danger';
            }
        %>
        <td colspan="3" class="table-<%= bg %>">
            <%- text %>
        </td>
    </tr>
    </tbody>
  </table>
  <%
  if(!needUpdateWhapi || !needUpdate){
  %>
  <a href="../do-update" class="btn btn-primary"><%- lingua.dashboard_page.btn_update_app %></a>
  <%
  }
  %>