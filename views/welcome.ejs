<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="css/bootstrap.min.css">
    <link rel="stylesheet" href="css/main.css">
    <title><%= lingua.welcome_page.title_tag %></title>
    <meta name="description" content="<%= lingua.welcome_page.desc_tag %>">
    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css"/>
    <link href='https://fonts.googleapis.com/css?family=Fira+Mono' rel='stylesheet' type='text/css'>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.2/dist/jquery.validate.min.js" ></script>
  </head>
  <body>
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-3"></div>
           <div class="col-md-6">
            <div class="card user-card mb-3">
              <div class="card-body text-center">
                <img src="img/logo.png" class="img-fluid">
              </div>
            </div>
            <% if(message.length) {%>
              <div class="alert alert-<%= type %>" role="alert">
                <%= message %>
              </div>
            <% } %>
            <div class="card user-card mb-3">
              <div class="card-body">
                  <label><%= lingua.welcome_page.label_languange %> :</label>
                  <select class="form-control" id="lang">
                      <option value="en_US" <%= lang == 'en_US' ? 'selected' : '' %>>English ( EN )</option>
                      <option value="id_ID" <%= lang == 'id_ID' ? 'selected' : '' %>>Indonesia ( ID )</option>
                      <option value="pt_BR" <%= lang == 'pt_BR' ? 'selected' : '' %>>Brazil ( BR )</option>
                  </select>
              </div>
            </div>
              <div class="card user-card">
                <div class="card-body">
                    <h4><i class="fa fa-info-circle"></i> <%= lingua.welcome_page.title %></h4>
                    <hr/>
                    <p style="text-align:justify"><%= lingua.welcome_page.desc %></p>
                    <hr/>
                    <h4><i class="fa fa-exclamation-triangle"></i> <%= lingua.welcome_page.disclaimer %></h4>
                    <hr/>
                    <p style="text-align:justify"><%= lingua.welcome_page.disclaimer_desc %></p>
                    <a href="install" class="btn btn-success"><%= lingua.welcome_page.button_1 %></a>
                    <a href="https://whapi.id" class="btn btn-info"><%= lingua.welcome_page.button_2 %></a>
                </div>
              </div>
              <div class="card mt-3 mb-3">
                <div class="card-body">
                    &copy; <%= new Date().getFullYear() %>, <%= lingua.welcome_page.copyright %>
                </div>
            </div>
           </div>
           <div class="col-md-3"></div>
      </div>
      </div>
    <script src="js/bootstrap.min.js"></script>
  </body>
</html>
<script>
      $(document).ready( function () {
        $("#lang").change(function(){
          $.ajax({
              url: '../change-language',
              type: 'post',
              data: "lang=" + $("#lang").val(),
              success: function(e) {
                  window.location.href = e.url
              },
              error: function(xhr, status, error) {
                  loadToast('danger', "Ada error : xhr = " + xhr.status + ' | pesan = ' + xhr.statusText)
              }
          });
        })
      })
</script>